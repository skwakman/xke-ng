<?xml version="1.0" encoding="utf-8"?>
<com.xebia.xcoss.axcv.layout.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/swipeLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:visibility="visible" >

    <LinearLayout
        android:id="@+id/scheduleSwipeBase"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@android:color/black"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/conferenceButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:src="@drawable/x_conference" >
            </ImageView>

            <TextView
                android:id="@+id/conferenceTitle"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignBottom="@+id/conferenceButton"
                android:layout_alignTop="@+id/conferenceButton"
                android:layout_alignWithParentIfMissing="true"
                android:layout_toRightOf="@+id/conferenceButton"
                android:gravity="center_vertical"
                android:paddingLeft="7sp"
                android:text="Schedule"
                android:textSize="@dimen/textsize_title" >
            </TextView>

            <ImageButton
                android:id="@+id/imageButton5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imageButton4"
                android:layout_alignTop="@+id/imageButton4"
                android:layout_toLeftOf="@+id/imageButton4"
                android:src="@drawable/x_conference"
                android:visibility="gone" >
            </ImageButton>

            <ImageButton
                android:id="@+id/imageButton4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/x_conference"
                android:visibility="gone" >
            </ImageButton>
        </RelativeLayout>

        <View
            android:id="@+id/firstDivider"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="@color/linebreak" />

        <FrameLayout
            android:id="@+id/frameLayout1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/conferenceDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="23 mei 1999" >
            </TextView>

            <LinearLayout
                android:id="@+id/nextLocationLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right" >

                <TextView
                    android:id="@+id/rightText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="3dp"
                    android:text="Right" >
                </TextView>

                <ImageView
                    android:id="@+id/ImageView04"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:src="@drawable/arrow_right_float" >
                </ImageView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/prevLocationLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left" >

                <ImageView
                    android:id="@+id/ImageView04"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:src="@drawable/arrow_left_float" >
                </ImageView>

                <TextView
                    android:id="@+id/leftText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:paddingLeft="3dp"
                    android:text="Left" >
                </TextView>
            </LinearLayout>
        </FrameLayout>

        <View
            android:id="@+id/secondDivider"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="@color/linebreak" />

        <ListView
            android:id="@+id/sessionList"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >
        </ListView>
    </LinearLayout>

</com.xebia.xcoss.axcv.layout.SwipeLayout>