<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:background="@android:color/black"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<RelativeLayout
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"
		android:id="@+id/relativeLayout1">
		<ImageView
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:src="@drawable/x_conference"
			android:id="@+id/conferenceButton"
			android:layout_alignParentLeft="true"></ImageView>
		<TextView
			android:paddingLeft="7sp"
			android:layout_height="fill_parent"
			android:layout_width="wrap_content"
			android:layout_alignWithParentIfMissing="true"
			android:gravity="center_vertical"
			android:layout_toRightOf="@+id/conferenceButton"
			android:layout_alignTop="@+id/conferenceButton"
			android:layout_alignBottom="@+id/conferenceButton"
			android:textSize="@dimen/textsize_title"
			android:id="@+id/av_name" android:text="Curriculum"></TextView>
		<ImageButton
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@drawable/x_conference"
			android:id="@+id/imageButton5"
			android:layout_toLeftOf="@+id/imageButton4"
			android:layout_alignTop="@+id/imageButton4"
			android:visibility="gone"
			android:layout_alignBottom="@+id/imageButton4"></ImageButton>
		<ImageButton
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@drawable/x_conference"
			android:id="@+id/imageButton4"
			android:visibility="gone"
			android:layout_alignParentRight="true"></ImageButton>
	</RelativeLayout>
	<View android:background="@color/linebreak" android:layout_width="fill_parent" android:layout_height="2dp" android:id="@+id/firstDivider"></View>
	<LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="vertical" android:id="@+id/av_author_layout"></LinearLayout>
	<LinearLayout android:id="@+id/LinearLayout01" android:orientation="vertical" android:paddingTop="3sp" android:layout_width="fill_parent" android:paddingBottom="3sp" android:paddingLeft="3sp" android:paddingRight="10sp" android:layout_height="wrap_content">
		<TextView android:textColor="@color/textcolor_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Labels" android:textStyle="bold" android:id="@+id/TextView01"></TextView>
		<View android:background="@color/textcolor_title" android:layout_width="fill_parent" android:id="@+id/View02" android:layout_height="2dp"></View>
		<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="TextView" android:id="@+id/av_labels"></TextView>
	</LinearLayout>
	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:id="@+id/labelBlock" android:orientation="vertical" android:paddingRight="10sp" android:paddingBottom="3sp" android:paddingLeft="3sp" android:paddingTop="3sp">
		<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/textView1" android:textColor="@color/textcolor_title" android:textStyle="bold" android:text="Sessions"></TextView>
		<View android:layout_width="fill_parent" android:id="@+id/View01" android:layout_height="2dp" android:background="@color/textcolor_title"></View>
		<ListView android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/searchResults"></ListView>
	</LinearLayout>
<!-- 	<ListView -->
<!-- 		android:id="@+id/sessionList" -->
<!-- 		android:layout_height="fill_parent" -->
<!-- 		android:layout_width="fill_parent"></ListView> -->
</LinearLayout>